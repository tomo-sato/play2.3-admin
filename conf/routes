# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           jp.dcworks.admin.controllers.LoginController.indexGet()
POST    /login                      jp.dcworks.admin.controllers.LoginController.login()

# Sample page
GET     /sample/                    jp.dcworks.admin.controllers.SampleController.indexGet()
GET     /sample/input               jp.dcworks.admin.controllers.SampleController.inputGet()
POST    /sample/input               jp.dcworks.admin.controllers.SampleController.inputPost()

# Map static resources from the /public folder to the /assets URL path
GET     /*file                      controllers.Assets.at(path="/public", file)
